<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

 <tiles-definitions>
 	<definition name="basic" template="/WEB-INF/views/template/admin/contentLayout.jsp">
 		<put-attribute name="left" value="/WEB-INF/views/template/admin/left.jsp"/>
 		<put-attribute name="header" value="/WEB-INF/views/template/admin/header.jsp"/>
 		<put-attribute name="main" value=""/>
 	</definition>
 	<definition name="food/admin/*" extends="basic">
 		<put-attribute name="main" value="/WEB-INF/views/food/admin/{1}.jsp"/>
 	</definition>
 	<definition name="login/admin/*" extends="basic">
 		<put-attribute name="header" value="/WEB-INF/views/template/client/headerNoLogin.jsp"/>
 		<put-attribute name="body" value="/WEB-INF/views/login/admin/{1}.jsp"/>
 	</definition>
 	<definition name="hcomment/admin/*" extends="basic">
 		<put-attribute name="body" value="/WEB-INF/views/hcomment/admin/{1}.jsp"/>
 	</definition>
 </tiles-definitions> 
 
 

 