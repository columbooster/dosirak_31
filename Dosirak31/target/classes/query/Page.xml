<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dosirak31.food.page.dao.PageDao">
	<!-- 페이지 리스트 -->
	<select id="pageList" parameterType="page" resultType="page">
		SELECT
			page_no, page_title
		FROM  just
	</select>

	<!-- 상세 페이지를 위한 게시물 조회 -->
	<select id="pageDetail" parameterType="page" resultType="page">
		/* Page - pageDetail */
		SELECT
			page_no, page_title
		FROM just
		WHERE page_no = ${page_no}
	
	</select>
</mapper>